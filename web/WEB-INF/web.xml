<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>receive</servlet-name>
        <servlet-class>Course.CourseServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>receive</servlet-name>
        <url-pattern>/course</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>community</servlet-name>
        <servlet-class>Community.CommunityServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>community</servlet-name>
        <url-pattern>/community</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>create</servlet-name>
        <servlet-class>Handle.Create</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>create</servlet-name>
        <url-pattern>/create</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>account</servlet-name>
        <servlet-class>User.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>account</servlet-name>
        <url-pattern>/account</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>modify</servlet-name>
        <servlet-class>Modify.ModifyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>modify</servlet-name>
        <url-pattern>/modify</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ban</servlet-name>
        <servlet-class>control.Ban</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ban</servlet-name>
        <url-pattern>/ban</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>createCourse</servlet-name>
        <servlet-class>control.CreateCourse</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>createCourse</servlet-name>
        <url-pattern>/createCourse</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deletecomment</servlet-name>
        <servlet-class>control.DeleteComment</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deletecomment</servlet-name>
        <url-pattern>/deletecomment</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deletecourse</servlet-name>
        <servlet-class>control.DeleteCourse</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deletecourse</servlet-name>
        <url-pattern>/deletecourse</url-pattern>
    </servlet-mapping>

</web-app>
